@model SGEP_Site.Models.FuncionarioCreateViewModel

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<h2 style="text-align:center; padding-top:30px">Adicionar Funcionário</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="formulario" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" placeholder="Nome do funcionário" class="form-control squareborder" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <input asp-for="Cargo" placeholder="Cargo do funcionário" class="form-control squareborder" required />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <!--div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success squareborder" />
                <a asp-action="Index"><input type="button" value="Cancelar" class="btn btn-danger squareborder" /></a>
            </div-->
            @await Html.PartialAsync(CaminhoPartialView.BOTOES_FORMULARIO)
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
