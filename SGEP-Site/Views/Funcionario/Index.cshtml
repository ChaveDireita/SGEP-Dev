@model IEnumerable<FuncionarioViewModel>
@{
    ViewData["Title"] = "Funcionários";
    ViewData[Chaves.PLACEHOLDER_PESQUISA] = "Pesquisar funcionário...";
}
<br />
<h2>Funcionários</h2>
<br />
<h5>Pesquisar:</h5>
@await Html.PartialAsync(CaminhoPartialView.BARRA_PESQUISA, ViewData)

<a asp-action="Create"><input type="button" value="Adicionar funcionário" class="btn btn-success squareborder"></a>
<a asp-action="Edit" id="linkEdit"><input type="button" id="editButton" class="btn btn-secondary squareborder" value="Editar fucionário" /></a>
<a asp-action="Details" id="linkDetails"><input type="button" id="detailsButton" class="btn btn-primary squareborder" value="Detalhes" /></a>
<script>
    document.getElementById("editButton").disabled = true;
    document.getElementById("detailsButton").disabled = true;

    function liberarClick(ID) {
        document.getElementById("editButton").disabled = false;
        document.getElementById("detailsButton").disabled = false;
        $('#linkEdit').prop("href", "/Funcionarios/Edit/" + ID);
        $('#linkDetails').prop("href", "/Funcionarios/Details/" + ID);

    }
</script>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demitido)
            </th>
        </tr>
    </thead>
    <tbody id="lista" class="scrollbar">
        @foreach (var item in Model)
        {
            <tr onclick="liberarClick(@item.Id)">
                <td>
                    FUN-@Html.DisplayFor(modelItem => item.Id)
                </td>
                <td data-toggle="tooltip" data-placement="top" title="@Html.DisplayFor(modelItem => item.Nome)">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Demitido)
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="~/js/scripts.js"></script>
