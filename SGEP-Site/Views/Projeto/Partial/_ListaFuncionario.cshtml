@model IEnumerable<SGEP_Model.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}
<hr />
<h2 class="mt-5 mb-5">Funcionários Associados</h2>
<h5>Pesquisar:</h5>
<p>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text squareborder">
                <i class="fas fa-search"></i>
            </span>
        </div>

        <input class="form-control squareborder" type="text" placeholder="Pesquisar projeto..." aria-label="Search" id="searchbar" onkeyup="SearchSystem(document.getElementById('searchbar'))">
    </div>
</p>
    <a asp-action="Details" id="linkDetails"><input type="button" id="detailsButton" class="btn btn-primary squareborder" value="Verificar funcionário" /></a>
    <form id="formRemove" asp-action="RemoverFuncionario" method="post" style="display: inline"><input type="submit" id="removeButton" class="btn btn-danger squareborder" value="Remover funcionário" /></form>
    <br>
    <br>
    <script>
        document.getElementById("detailsButton").disabled = true;
        document.getElementById("removeButton").disabled = true;
        function liberarClick(ID) {
            document.getElementById("removeButton").disabled = false;
            document.getElementById("detailsButton").disabled = false;
            $('#linkDetails').prop("href", "/Funcionario/Details/" + ID);
            $('#formRemove').prop("action", "/Projeto/RemoverFuncionario/" + @ViewData[Chaves.PROJETO_ID] + "/" + ID);
        }
    </script>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
            </tr>
        </thead>
        <tbody id="lista">
            @foreach (var item in Model)
            {
                <tr onclick="liberarClick(@item.Id)" data-toggle="list">
                    <td>
                        FUN-@Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script type="text/javascript" src="~/js/search_system.js"></script>
