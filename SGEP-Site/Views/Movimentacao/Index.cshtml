@model IEnumerable<MovimentacaoIndexViewModel>
@{
    ViewData["Title"] = "Movimentações";
    ViewData[Chaves.PLACEHOLDER_PESQUISA] = "Pesquisar movimentação...";
}
<br />
<h2>Movimentações</h2>
<br />
<h5>Pesquisar:</h5>
@await Html.PartialAsync(CaminhoPartialView.BARRA_PESQUISA, ViewData)

<a asp-action="Create"><input type="button" value="Adicionar movimentação" class="btn btn-success squareborder"></a>
<a asp-action="Details" id="linkDetails"><input type="button" id="detailsButton" class="btn btn-primary squareborder" value="Detalhes" /></a>
<script>
    document.getElementById("detailsButton").disabled = true;

    function liberarClick(ID, action)
    {
        document.getElementById("detailsButton").disabled = false;
        $('#linkDetails').prop("href", "Movimentacao/" + action + "/Details/" + ID);
    }
</script>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
        </tr>
    </thead>
    <tbody id="lista" class="scrollbar">
        @foreach (var item in Model)
        {
            <tr onclick="liberarClick(@item.Id, '@item.Action')">
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td data-toggle="tooltip" data-placement="top" title="@Html.DisplayFor(modelItem => item.Material)">
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destino)
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="~/js/scripts.js"></script>
