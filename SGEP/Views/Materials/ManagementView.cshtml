@model IEnumerable<SGEP.Models.Material>
@using SGEP.Models;
@{
    ViewData["Title"] = "Materiais";
    ViewData[Chaves.PLACEHOLDER_PESQUISA] = "Pesquisar material...";
}
<br />
<h2>Materiais</h2>
<br />
<h5>Pesquisar:</h5>
@await Html.PartialAsync(CaminhoPartialView.BARRA_PESQUISA, ViewData)
<p>
    <a asp-action="Create"><input type="button" value="Adicionar material" class="btn btn-success squareborder" data-toggle="modal" data-target="#add-modal"></a>
    <a asp-action="Edit" id="linkEdit"><input type="button" id="editButton" class="btn btn-secondary squareborder" value="Editar material" /></a>
    <a asp-action="Details" id="linkDetails"><input type="button" id="detailsButton" class="btn btn-primary squareborder" value="Detalhes" /></a>
    <script>
        document.getElementById("editButton").disabled = true;
        document.getElementById("detailsButton").disabled = true;

        function liberarClick(ID) {
            document.getElementById("editButton").disabled = false;
            document.getElementById("detailsButton").disabled = false;
            $('#linkEdit').prop("href", "/Materials/Edit/" + ID);
            $('#linkDetails').prop("href", "/Materials/Details/" + ID);

        }

    </script>
</p>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    <!--@Html.DisplayNameFor(model => model.Unidade)-->
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="scrollbar" id="lista">
            @foreach (var item in Model)
            {
            <tr onclick="liberarClick(@item.Id)">
                <td>
                    MAT-@Html.DisplayFor(modelItem => item.Id)
                </td>
                <td data-toggle="tooltip" data-placement="top" title="@Html.DisplayFor(modelItem => item.Descricao)">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)@Html.DisplayFor(modelItem => item.Unidade)
                </td>
                <td>
                    
                </td>
                <td>
                    <!--<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
                </td>
            </tr>
            }
        </tbody>
    </table>
    <script type="text/javascript" src="~/js/scripts.js"></script>