@model SGEP.Models.Projeto

@{
    ViewData["Title"] = "Criar";
}

<h2 style="text-align:center; padding-top:30px">Adicionar Projeto</h2>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <input asp-for="Estado" type="hidden" class="form-control" />
            <input asp-for="DataFim" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrazoEstimado" class="control-label"></label>
                <input asp-for="PrazoEstimado" class="form-control" />
                <span asp-validation-for="PrazoEstimado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index"> <input type="button" value="Cancelar" class="btn btn-danger squareborder" /></a>
                <input type="submit" value="Adicionar" class="btn btn-success squareborder" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
