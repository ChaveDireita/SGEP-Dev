@model SGEP.Models.MovimentacaoAlocacao

@{
    IEnumerable<Funcionario> funcionarios = (IEnumerable<Funcionario>) ViewData[Chaves.FUNCIONARIOS];
    IEnumerable<Material> materiais = (IEnumerable<Material>) ViewData[Chaves.MATERIAIS];
    IEnumerable<Projeto> projetos = (IEnumerable<Projeto>) ViewData[Chaves.PROJETOS];
 }

    <form asp-action="MoverMaterial" asp-controller="Movimentacoes">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Material</label>
            <select asp-for="MaterialMovimentado" class="selectpicker browser-default form-control mb-4 squareborder">
                <option value="" disabled selected>Selecionar material...</option>
                @foreach (Material m in materiais)
                {
                    <option value="@m.Id">@m.Descricao</option>
                }
            </select>
            <span asp-validation-for="MaterialMovimentado" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Projeto</label>
            <select asp-for="ProjSolicitante" class="browser-default form-control mb-4 squareborder">
                <option value="" disabled selected>Selecionar projeto...</option>
                @foreach (Projeto p in projetos) 
                {
                    <option value="@p.Id">@p.Nome</option>
                }
            </select>
            <span asp-validation-for="ProjSolicitante" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Funcionário</label>
            <select asp-for="Solicitante" class="browser-default form-control mb-4 squareborder" >
                <option value="" disabled selected>Selecionar funcionário...</option>
                @foreach (Funcionario f in funcionarios)
                {
                    <option value="@f.Id">@f.Nome</option>
                }
            </select>
            <span asp-validation-for="Solicitante" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <!--div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success squareborder" />
                <a asp-action="Index"><input type="button" value="Cancelar" class="btn btn-danger squareborder" /></a>
            </div-->
            @await Html.PartialAsync(CaminhoPartialView.BOTOES_FORMULARIO)
    </form>
