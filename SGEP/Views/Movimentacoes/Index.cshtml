@model IEnumerable<SGEP.Models.Movimentacoes.IMovimentacao>

@{
    ViewData["Title"] = "Index";
    ViewData[Chaves.PLACEHOLDER_PESQUISA] = "Pesquisar...";
}
<br />
<h2>Movimentações</h2>
<br />
<h5>Pesquisar:</h5>
@await Html.PartialAsync(CaminhoPartialView.BARRA_PESQUISA, ViewData)
<p>
    <a asp-action="Create"><input type="button" value="Adicionar movimentação" class="btn btn-success squareborder"></a>
    <a asp-action="Edit" id="linkEdit"><input type="button" id="editButton" class="btn btn-secondary squareborder" value="Editar movimentação" /></a>
    <a asp-action="Details" id="linkDetails"><input type="button" id="detailsButton" class="btn btn-primary squareborder" value="Detalhes" /></a>
    <script>
        document.getElementById("editButton").disabled = true;
        document.getElementById("detailsButton").disabled = true;

        function liberarClick(ID) {
            document.getElementById("editButton").disabled = false;
            document.getElementById("detailsButton").disabled = false;
            $('#linkEdit').prop("href", "/Movimentacoes/Edit/" + ID);
            $('#linkDetails').prop("href", "/Movimentacoes/Details/" + ID);

        }
    </script>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoMovimentacao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="lista">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.Id)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoMovimentacao)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script type="text/javascript" src="~/js/scripts.js"></script>